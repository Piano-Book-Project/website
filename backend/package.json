{
    "name": "piano-book-backend",
    "version": "1.0.0",
    "description": "김츄츄의 피아노책 백엔드 API",
    "private": true,
    "scripts": {
        "prepare": "husky install",
        "dev": "next dev -p 3002",
        "build": "next build",
        "start": "next start -p 3002",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate deploy",
        "db:seed": "node --loader ts-node/esm prisma/seed.ts",
        "db:studio": "prisma studio",
        "db:reset": "prisma migrate reset --force"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "@prisma/client": "^6.11.1",
        "prisma": "^6.11.1",
        "next": "14.2.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "bcryptjs": "^3.0.2",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "helmet": "^8.0.0",
        "express-rate-limit": "^7.3.1",
        "compression": "^1.7.4",
        "dotenv": "^16.4.5",
        "swagger-ui-react": "^5.12.8",
        "swagger-jsdoc": "^6.2.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^3.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/next": "^9.0.0",
        "@types/node": "^24.0.13",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/swagger-ui-react": "^4.18.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "eslint": "^9.30.1",
        "eslint-config-next": "14.2.3",
        "prettier": "^3.6.2",
        "jest": "^30.0.4",
        "@types/jest": "^30.0.0",
        "ts-jest": "^29.4.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}